generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Recette {
  id                Int       @id @default(autoincrement())
  nom               String
  typePlat          String
  description       String?

  portions          Int
  tempsPreparation  Int

  instructions      String?

  coutTotal         Float?
  prixVente         Float?
  margeBrute        Float?
  tauxRentabilite   Float?

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  ingredients       IngredientRecette[]

  @@index([nom])
}

model Ingredient {
  id              Int       @id @default(autoincrement())
  nom             String    @unique
  unite           String
  prixUnitaire    Float
  categorie       String?
  stockDisponible Float?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  recettes        IngredientRecette[]

  @@index([categorie])
}

model IngredientRecette {
  id            Int        @id @default(autoincrement())

  recette       Recette    @relation(fields: [recetteId], references: [id], onDelete: Cascade)
  recetteId     Int

  ingredient    Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
  ingredientId  Int

  quantite      Float
  coutCalcule   Float?

  @@unique([recetteId, ingredientId])
}
